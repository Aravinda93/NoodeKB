doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet'           href='/bower-components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet'           href='/css/style.css')  
    //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
        ul.nav.navbar-nav.navbar-left
          li.nav-item
            a.nav-link(href='/') Knowledgebase
          |
          li.nav-item
            a.nav-link(href='/') Home
          |
          if user
            li.nav-item
              a.nav-link(href='/articles/add') Add Article
        ul.nav.navbar-nav.navbar-right
          if user
            li.nav-item
              a.nav-link(href='#') #{username}
            li.nav-item
              a.nav-link(href='/users/logout') Logout
          else
            |   
            li.nav-item
              a.nav-link(href='/users/register') Register
            |
            li.nav-item
              a.nav-link(href='/users/login') Login

    .container
      br
      != messages('message', locals)
      if errors 
        each error in errors
          div(class="alert alert-danger")  #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='/bower-components/jquery/dist/jquery.js')
    script(src='/bower-components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
